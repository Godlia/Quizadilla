@model IEnumerable<Quizadilla.Models.Quiz>

@{
    ViewData["Title"] = "Search Result";
}

<h2 class="mb-4">Quiz Search</h2>


@if (!Model.Any())
{
    <div class="alert alert-warning mt-3">
        No results for your provided search.
    </div>
}
else
{
<div class="ingredient-scroller">
    @foreach (var quiz in Model)
    {
        var theme = string.IsNullOrWhiteSpace(quiz.Theme) ? "tomato" : quiz.Theme; // fallback
                                                                                   <div class="ingredient-card card theme-@theme">
                                                                                       <div class="ingredient-top"></div>

            <div class="card-body">
                <h5 class="ingredient-title">@quiz.Title</h5>
                <div class="ingredient-meta">
                    @{
                        var description = quiz.Description ?? "No description";
                        var displayText = description.Length > 80
                            ? (description.Substring(0, 80) + "â€¦")
                            : description;
                    }
                    @displayText
                </div>

                <div class="ingredient-actions d-flex justify-content-between mt-3">
                    <a asp-controller="Quiz" asp-action="Quiz" asp-route-id="@quiz.QuizId"
                        class="btn btn-primary btn-sm">Play</a>
                </div>
            </div>
        </div>
    }
</div>
}