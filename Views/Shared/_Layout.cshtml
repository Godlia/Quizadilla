<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Quizadilla - @ViewData["Title"]</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/project.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-light custom-navbar-footer border-bottom box-shadow mb-3">
        <div class="container-fluid d-flex align-items-center justify-content-between">

            <!-- LEFT-LOGO-AND-NAME -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/ChatGPT-Logo.svg" alt="logo" width="35" class="me-2">
                    <span class="fw-bold">Quizadilla</span>
                </a>

            <!-- MIDDLE-NAV-LINKS -->
            <div class="flex-grow-1 d-flex justify-content-center">
                <ul class="navbar-nav flex-row nav-mid" style="font-size: 1.2rem; font-weight: 400;">
                    <li class="nav-item mx-2"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item mx-2"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li class="nav-item mx-2"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Test">Test</a></li>
                </ul>
            </div>

            <!-- RIGHT NAVBAR - SEARCH, ACC, CHEESEBURGER -->
                <div class="right-content d-flex align-items-center">
            <!-- Searchbar -->
                <form class="d-flex search-form me-2">
                  <div class="input-group">
                    <input type="search" class="form-control" placeholder="Search" id="searchInput">
                    <button class="btn btn-outline-secondary clear-btn" type="button">
                      <i class="bi bi-search"></i>
                    </button>
                  </div>
                </form>

            <!-- Person Dropdown -->
                <div class="dropdown me-3">
                    <a href="#" class="text-dark fs-4 person-icon dropdown-toggle" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end custom-navbar-footer" aria-labelledby="accountDropdown">
                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="MyAccount">My Account</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="MyAccountSettings">Settings</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="LOGIN-LOGOUT">Logout/Login(EIRIK DO MAGIC)</a></li>
                    </ul>
                </div>

            <!-- Hamburger -->
                <button id="menuToggle" class="navbar-toggler" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
        </div>
  </nav>
</header>

  <!-- RIGHT-SIDEBAR-POPUP -->
  <div id="sidebar" class="sidebar custom-navbar-footer">
    <div class="sidebar-header">
      <h5 class="mb-0 text-dark">Menudilla <img src="~/img/ChatGPT-Logo.svg" alt="logo" width="35" class="me-2"></h5>
      <button class="btn-close" id="closeSidebar"></button>
    </div>
    <div class="sidebar-user d-none">
      <form class="d-flex mb-3">
        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
      </form>
      <a href="#" class="text-dark fs-4 mb-3 d-block">
        <i class="bi bi-person me-2"></i> My Account
      </a>
      <hr>
  </div>
    <!-- ONLY=SMALL SCREENS -->
    <a class="small-only" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    <a class="small-only" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    <a class="small-only" asp-area="" asp-controller="Home" asp-action="Test">Test</a>
    <a class="small-only" asp-area="" asp-controller="Home" asp-action="MyAccount">My account</a>
    <hr>
    <!-- QUIZZES DROPDOWN BAR -->
    <div class="sidebar-dropdown">
        <button class="sidebar-link d-flex w-100 align-items-center justify-content-between"
        data-bs-toggle="collapse" data-bs-target="#quizSubmenu" aria-expanded="false" aria-controls="quizSubmenu">
          <span>Quizzes</span>
          <i class="bi bi-chevron-down ms-2"></i>
        </button>

      <div id="quizSubmenu" class="collapse">
        <ul class="list-unstyled ps-3 my-2">
          <li><a class="d-block" asp-controller="Home" asp-action="Quiz1">• Quiz 1</a></li>
          <li><a class="d-block" asp-controller="Home" asp-action="Quiz2">• Quiz 2</a></li>
        </ul>
      </div>
    </div>
    
    <a asp-area="" asp-controller="Home" asp-action="Settings">Settings</a>
    <a asp-area="" asp-controller="Home" asp-action="Support">Support</a>
  </div>

  <div class="container custom-background-color">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

<!-- FOOTER -->
  <footer class="border-top footer text-muted text-center py-3 custom-navbar-footer text-color">
    &copy; 2025 - Quizadilla
  </footer>


  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
