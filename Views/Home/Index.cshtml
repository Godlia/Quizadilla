@{
    ViewData["Title"] = "Home";
}

<div class="d-flex flex-wrap align-items-center justify-content-center gap-4 mt-3 px-4">
  <!-- Venstre del -->
  <div class="welcome-text">
    <h1 class="mb-2 fw-bold">Welcome to Quizadilla</h1>
    <p class="text-index fw-semibold">Your home for quizzes</p>
  </div>

  <!-- Høyre del -->
  <div class="todays-quiz">
    <h4 class="mb-3 text-center fw-semibold text-index-quiz">Today’s random quiz</h4>
    <div class="card ingredient-card theme-tomato">
      <div class="card-body">
        <h3 class="ingredient-title">How many bird breeds do you know?</h3>
        <p class="ingredient-meta mb-3">Nature · 17 questions</p>
        <div class="ingredient-actions d-flex gap-2">
          <a class="btn btn-outline-secondary btn-sm" href="#">Preview</a>
          <a class="btn btn-primary btn-sm" href="#">Play</a>
        </div>
      </div>
    </div>
  </div>
</div>


